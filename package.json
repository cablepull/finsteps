{
  "name": "finsteps",
  "version": "0.4.1",
  "description": "Mermaid presentation runtime",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "bundle": "esbuild src/index.ts --bundle --format=esm --outfile=dist/finsteps.esm.js --external:mermaid --platform=browser --target=es2020",
    "bundle:min": "esbuild src/index.ts --bundle --format=esm --minify --outfile=dist/finsteps.esm.min.js --external:mermaid --platform=browser --target=es2020",
    "build:cdn": "npm run build && npm run bundle && npm run bundle:min",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:unit": "vitest run",
    "test:playwright": "playwright test",
    "test": "npm run test:unit && npm run test:playwright"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.19.7",
    "@typescript-eslint/eslint-plugin": "8.8.1",
    "@typescript-eslint/parser": "8.8.1",
    "esbuild": "^0.19.0",
    "eslint": "9.6.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
